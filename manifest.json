{
    "manifest_version": 2,

    "name": "SpotiShush",
    "version": "2017.8.7",

    "default_locale": "en",
    "description": "__MSG_ext_desc__",
    "icons": {
        "16":  "img/spotishush16.png",
        "48":  "img/spotishush48.png",
        "128": "img/spotishush128.png"
    },

    "author": "guihkx",

    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },

    "permissions": [
        "https://open.spotify.com/*",
        "https://audio-fa.scdn.co/audio/*",
        "webRequest",
        "tabs"
    ]
}
